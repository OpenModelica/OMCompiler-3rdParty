FIND_PACKAGE(BLAS)
FIND_PACKAGE(LAPACK)

IF(NOT BLAS_FOUND)
    MESSAGE(STATUS "BLAS library not found.")
    MESSAGE(STATUS "Setting manually to:")
    SET(BLAS_DIR "${OMDEV_DIR}/lib/3rdParty/Lapack/Lib")
    MESSAGE(STATUS "${BLAS_DIR}")
ENDIF()

IF(NOT LAPACK_FOUND)
    MESSAGE(STATUS "LAPACK library not found.")
    MESSAGE(STATUS "Setting manually to:")
    SET(LAPACK_DIR "${OMDEV_DIR}/lib/3rdParty/Lapack/Lib")
    MESSAGE(STATUS "${LAPACK_DIR}")
ENDIF()

SET(BLAS_LIBRARY_DIRS "${BLAS_DIR}")
SET(LAPACK_LIBRARY_DIRS "${LAPACK_DIR}")
